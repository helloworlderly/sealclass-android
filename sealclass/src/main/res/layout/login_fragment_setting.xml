<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:background="@android:color/transparent">
    <LinearLayout
        android:id="@+id/login_setting_ll_container"
        android:layout_width="230dp"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting"
            android:textColor="@color/text_white"
            android:textSize="16dp"
            android:layout_margin="12dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/separate_line"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22.5dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/text_white"
                android:textSize="15dp"
                android:text="@string/login_setting_resolution_label"
                />

            <cn.rongcloud.sealclass.ui.widget.WrapContentGridView
                android:id="@+id/login_setting_gv_resolution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:numColumns="2"
                android:verticalSpacing="20dp"
                android:choiceMode="singleChoice"
                tools:listitem="@layout/common_item_checktextview"
                >
            </cn.rongcloud.sealclass.ui.widget.WrapContentGridView>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/separate_line"/>
    </LinearLayout>
</LinearLayout>